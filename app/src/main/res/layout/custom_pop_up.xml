<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_pop_up"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FACFCF">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tip_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tip_text"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_number" />

    <View
        android:id="@+id/divider7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimaryButton"
        app:layout_constraintEnd_toEndOf="@id/tip_text"
        app:layout_constraintStart_toStartOf="@+id/tip_text"
        app:layout_constraintTop_toBottomOf="@+id/tip_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tip_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:text="@string/tap_to_dismiss"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tip_text"
        app:layout_constraintStart_toStartOf="@+id/tip_text"
        app:layout_constraintTop_toBottomOf="@+id/divider7" />
</androidx.constraintlayout.widget.ConstraintLayout>

